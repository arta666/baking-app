<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused and not pressed -->
    <item android:state_focused="true" android:state_pressed="false" android:color="@android:color/white" />

    <!-- Focused and pressed -->
    <item android:state_focused="true" android:state_pressed="true" android:color="@color/colorPrimaryDark"/>

    <!-- Focused and pressed -->
    <item android:state_focused="false" android:state_pressed="true" android:color="@color/colorPrimaryDark"/>

    <!-- Default Color -->
    <item android:color="@android:color/white" />

</selector>