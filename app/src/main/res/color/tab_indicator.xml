<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused and not pressed -->
    <item android:state_focused="true" android:state_selected="false" android:color="@color/colorPrimaryDark" />

    <!-- Focused and pressed -->
    <item android:state_focused="true" android:state_selected="true" android:color="@android:color/white"/>

    <!-- Focused and pressed -->
    <item android:state_focused="false" android:state_selected="true" android:color="@android:color/white"/>

    <!-- Default Color -->
    <item android:color="@color/colorPrimaryDark" />

</selector>